<div class="col-lg-6">
  <h1 class="text-center">The Hitlist</h1>
  {{#each hitlist }}
  <div class="panel panel-default text-center">
    <div class="panel-body">
      <hr />
      <h3>{{ this.burger_name }}</h3>
      <img src="/assets/img/burger.png" alt="burgers" class="burger-photo">
      <br />
      <h4>From: {{ this.restaurant }}</h4>
    </div>
    <div class="panel-footer">
      <form action="/?_method=PUT" method="POST">
        <div class="form-group">
          <input type="hidden" name="id" value="{{ this.id }}">
        </div>
        <div class="form-group">
          <button type="submit" class="btn btn-success">DEVOUR IT!</button>
        </div>
      </form>
    </div>
  </div>
  {{/each}}
</div>

<div class="col-lg-6">
  <h1 class="text-center">Mission Accomplished</h1>
  {{#each devoured }}
    <div class="panel panel-success text-center">
    <div class="panel-heading">
      <h3 class="panel-title">{{ this.burger_name }}</h3>
    </div>
    <div class="panel-body">
      Taken out at {{ this.restaurant }}
    </div>
  </div>
  {{/each}}
